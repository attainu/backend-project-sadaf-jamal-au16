<div class="d-flex justify-content-center">
    <div>
        <h1 class="text-center">Sign Up</h1>
        <form action="/profile" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="InputName" class="form-label">Name</label>
                <input type="text" name="name" class="form-control" id="InputName" aria-describedby="nameHelp">
            </div>
            <div class="mb-3">
                <label for="InputEmail" class="form-label">Email address</label>
                <input type="email" name="email" class="form-control" id="InputEmail" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="InputPassword" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" id="InputPassword">
            </div>
            <div class="mb-3">
                <label for="UploadAvatorImage" class="form-label">Avator Image</label>
                <input type="file" name="avator" class="form-control" id="UploadAvatorImage">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>