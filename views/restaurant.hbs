<div class="card mb-3 w-100">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{imageUrl}}" alt="restaurant image" class="w-100">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{restaurantName}}</h5>
        <p class="card-text">Email: {{email}}</p>
        <p class="card-text">Address: {{address}}</p>
        {{!-- <p class="card-text"><small class="text-muted">Note: Hungry holds all Rights to remove partner in case of misuse of platform</small></p> --}}
      </div>
    </div>
  </div>
</div>

<div class="row row-cols-1 row-cols-md-5 g-2 mx-1 mb-5">
  {{#each items}}
    <div class="col">
      <div class="card h-100 w-100" style="width: 18rem;">
        <img src="" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{this.itemName}}</h5>
          <p class="card-text">{{this.price}}</p>
          {{!-- <a href="#" class="btn btn-success">Edit Item</a> --}}
        </div>
      </div>
    </div>
  {{else}}
    <p class="text-center w-100 fs-4 fw-bolder">no items listed for above restaurant</p>
  {{/each}}
</div>